@import "./skin.styl"
body
  background: #f5f5f5
  font-size: 12px
  font-family: Arial,"PingFang SC","Hiragino Sans GB"
  color: #333
  -webkit-overflow-scrolling: touch
/*清浮动*/
.clearfix:after
  content: "."
  display: block
  height: 0
  clear: both
  visibility: hidden
.clearfix
  display:block
.G-fl
  float: left
.G-fr
  float: right
.G-font-bold
  font-weight:bold
.G-text-ellipsis
  overflow: hidden
  text-overflow:ellipsis
  white-space: nowrap
.G-text-autocut
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  word-wrap: normal
.G-animate-rotate
  display: inline-block
  animation: commonRotate 2s linear infinite
@-webkit-keyframes commonRotate{
  from {-webkit-transform: rotate(0deg);}
  to {-webkit-transform: rotate(360deg);}
}
.G-btn
  display: inline-block
  padding: 0 10px
  min-width: 90px
  height: 34px
  line-height: 34px
  text-align: center
  border-radius: 3px
  font-size: 14px
  color: #fff
  cursor: pointer
  vertical-align: middle
  &.disabled, &.disabled:hover
    cursor: default
    box-sizing: border-box
    background: #fcfdfd
    border: solid 1px #dee5e7
    color: #ccc!important
.G-btn-small
  min-width: 60px
  font-size: 12px
  height: 26px
  line-height: 26px
.G-btn-large
  height: 42px
  line-height: 42px
.G-btn-primary
  background: $color-primary
.G-btn-primary:hover
  background: $color-primary-hover
.G-btn-default
  box-sizing: border-box
  color: #333
  background: $color-default
  border: solid 1px #dee5e7
  box-shadow: 0 1px 1px rgba(90,90,90,.1)
.G-btn-default:hover
  background: $color-default-hover
.G-btn-info
  background: $color-info
.G-btn-info:hover
  background: $color-info-hover
.G-btn-danger
  background: $color-danger
.G-btn-danger:hover
  background: $color-danger-hover
.G-border-color-danger
  border-color: $color-danger !important
.G-select
  height: 24px
  vertical-align: middle
  font-size: 12px
.G-ipt-text-a
  box-sizing:border-box
  border: solid 1px $color-line-b
  text-indent: 8px
  font-size: 14px
.G-triangle-up
  position:relative
  display: inline-block
  width:0
  height:0
  border-width:0 8px 8px
  border-style:solid
  border-color:transparent transparent #333
.G-triangle-left
  position:relative
  display: inline-block
  width:0
  height:0
  border-width: 8px 8px 8px 0
  border-style:solid
  border-color:transparent #333 transparent transparent

